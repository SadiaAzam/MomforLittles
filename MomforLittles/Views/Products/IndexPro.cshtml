@model IEnumerable<MomforLittles.Models.Product>
@using MomforLittles.Models;
@{
    ViewBag.Title = "Index";
}
@{
    Layout = "~/Views/Shared/_LayoutBrand.cshtml";
}
<h2>Index</h2>


<table class="table table-bordered table-hover">
    <tr>
        <th>
            PICTURE
        </th>
        <th>
            PRODUCT NAME
        </th>
        <th width="200px">
            DESCRIPTION
        </th>
        <th>
            PURCHASE PRICE
        </th>
        <th>
            SALE PRICE
        </th>

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        if (Session["Brand"] != null)
        {
            Brand p = (Brand)Session["Brand"];
            if (p.BRAND_ID == item.PRODUCT_ID)
            {
        <tr>
            <td>
                <img height="100px" width="100px" src="@Url.Content(item.PICTURE)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PRODUCT_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DESCRIPTION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PURCHASEPRICE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SALEPRICE)
            </td>

            <td>
                <a class="btn btn-primary glyphicon glyphicon-edit" href="@Url.Action("Edit", "Products", new { id = item.PRODUCT_ID })"></a>
                <a class="btn btn-success glyphicon glyphicon-book" href="@Url.Action("Details", "Products", new { id = item.PRODUCT_ID })"></a>
              

            </td>
        </tr>
            }
        }
    }

</table>
