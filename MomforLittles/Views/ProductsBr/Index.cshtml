@model IEnumerable<MomforLittles.Models.Product>
@using MomforLittles.Models;
@{
    Layout = "~/Views/Shared/_LayoutBrand.cshtml";
}

@{

    ViewBag.Title = "Index";
}

<h2> Products</h2>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            Id
        </th>
        <th>
            PICTURE
        </th>
        <th>
            PRODUCT NAME
        </th>
        <th width="200px">
            DESCRIPTION
        </th>
        <th>
            PURCHASE PRICE
        </th>
        <th>
            SALE PRICE
        </th>
        <th>
            Brand id
        </th>

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        if (Session["Brand"] != null)
        {
            Brand p = (Brand)Session["Brand"];
            if (p.BRAND_ID == item.BRAND_FID)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PRODUCT_ID)
            </td>
            <td>
                <img height="100px" width="100px" src="@Url.Content(item.PICTURE)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PRODUCT_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DESCRIPTION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PURCHASEPRICE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SALEPRICE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BRAND_FID)
            </td>


            <td>
                
                <a class="btn btn-success glyphicon glyphicon-book" href="@Url.Action("Details", "ProductsBr", new { id = item.PRODUCT_ID })"></a>


            </td>
        </tr>

            }
        }
    }

</table>
