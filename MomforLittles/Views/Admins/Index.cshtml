@model IEnumerable<MomforLittles.Models.Admin>
@using MomforLittles.Models;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-danger btn-lg" href="@Url.Action("Create","Admins")">Add New Admin</a>
</p>
<table class="table">
    <tr>
        <th>
            Admin Name
        </th>
        <th>
            ADMIN EMAIL
        </th>
        <th>
            ADMIN PASSWORD
        </th>
        <th>
            CONTACT
        </th>
        <th>
            ADDRESS
        </th>
        <th>
            PROFILE
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        Admin a = (Admin)Session["Admin"];
        if (a.ADMIN_ID == item.ADMIN_ID)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ADMIN_NAME)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ADMIN_EMAIL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ADMIN_PASSWORD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ADMIN_CONTACT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ADMIN_ADDRESS)
                </td>
                <td>
                    <img height="100px" width="100px" src="@Url.Content(item.ADMIN_PROFILE)" />
                </td>
                <td>
                    <a class="btn btn-primary glyphicon glyphicon-edit" href="@Url.Action("Edit","Admins", new {id= item.ADMIN_ID})"></a>
                    <a class="btn btn-success glyphicon glyphicon-book" href="@Url.Action("Details","Admins", new {id= item.ADMIN_ID})"></a>
                    <a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete","Admins", new {id= item.ADMIN_ID})"></a>

                </td>
            </tr>
        }
    }

</table>
